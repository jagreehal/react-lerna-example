{
  "name": "react-lerna-example",
  "version": "0.0.1",
  "description": "react lerna example",
  "scripts": {
    "build": "lerna exec --parallel -- babel src -d dist --ignore spec.js,story.js",
    "bootstrap": "lerna bootstrap",
    "start": "NODE_ENV=development start-storybook -p 9001 -c .storybook",
    "test": "jest --verbose"
  },
  "devDependencies": {
    "@storybook/react": "^3.3.6",
    "babel-cli": "^6.26.0",
    "babel-jest": "^22.0.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "enzyme": "^3.3.0",
    "glob-loader": "^0.3.0",
    "jest": "^22.0.5",
    "lerna": "^2.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0"
  },
  "jest": {
    "resetModules": true,
    "testMatch": [
      "**/?(*.)(spec).js?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>node_modules/"
    ]
  }
}
